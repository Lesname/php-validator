{
  "name": "lesname/validator",
  "license": "MIT",
  "require": {
    "php": "^8.4.0",

    "ext-json": "*",
    "ext-bcmath": "*",

    "lesname/documentor": "^0.6.0"
  },
  "require-dev": {
    "ext-intl": "*",

    "squizlabs/php_codesniffer": "^3.6.0",

    "vimeo/psalm": "^6.0.0",

    "phpunit/phpunit": "^12.0.0",

    "phpstan/phpstan": "^2.0.0",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan-deprecation-rules": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "LesValidator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LesValidatorTest\\": "test/"
    }
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
